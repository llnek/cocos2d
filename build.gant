def doCompileCoffeeScript(wappid) {
  copy (todir: "${buildDir}/web_scripts/${wappid}") {
    fileset (dir: "${webDir}/${wappid}/src") {
      include (name: '**/*.coffee')
    }
  }
  exec (executable: 'coffee') {
    arg (value: '--bare')
    arg (value: '--output')
    arg (value: "${buildDir}/web_scripts/${wappid}")
    arg (value: '--compile')
    arg (value: "${buildDir}/web_scripts/${wappid}")
  }
}

