target (newapp: '') {
  input (message: "Enter app-name: ", addproperty: 'appid')
  println "Creating new game: ${appid}"
  mkdir (dir: "${webDir}/${appid}")
  ["res/game", "res/gui" , "res/sfx",
   "src/components", "src/nodes", "src/systems",
   "src/entities" ,
   "src/i18n", "src/levels"].each { s ->
    mkdir (dir: "${webDir}/${appid}/${s}")
  }
  ["info" , "pages" , "styles"].each { s ->
    mkdir (dir: "${webDir}/${appid}/${s}")
  }
  copy (file: "${srcDir}/resources/game.json", todir: "${webDir}/${appid}/info")
  copy (file: "${srcDir}/resources/game.mf", todir: "${webDir}/${appid}/info")
  final appkey= UUID.randomUUID()
  tstamp () {
    format (property: "pubtime", pattern: "yyyy-MM-dd")
  }
  replace (file: "${webDir}/${appid}/info/game.mf", token: "@@PUBDATE@@", value: "${pubtime}")
  replace (file: "${webDir}/${appid}/info/game.json", token: "@@UUID@@", value: "${appkey}")
  ["game.js", "splash.js", "mmenu.js", "hud.js", "factory.js"].each { s ->
    touch (file: "${webDir}/${appid}/src/${s}")
  }
  copy (file: "${srcDir}/resources/config.js", todir: "${webDir}/${appid}/src")
  copy (file: "${srcDir}/resources/protos.js", todir: "${webDir}/${appid}/src")
  replace (file: "${webDir}/${appid}/src/config.js", token: "@@UUID@@", value: "${appkey}")
  copy (file: "${srcDir}/resources/l10n.js", tofile: "${webDir}/${appid}/src/i18n/game_en_US.js")
  copy (file: "${srcDir}/resources/ccconfig.js", todir: "${webDir}/${appid}/src")
  echo (message: '{ "jsList" : [] }', file: "${webDir}/${appid}/src/project.json")
  cocos_new("${appid}");
}

def cocos_new(appid) {
  mkdir (dir: "${basedir}/cocos")
  exec (executable: 'cocos') {
    arg (value: 'new')
    arg (value: '-l')
    arg (value: 'js')
    arg (value: '-t')
    arg (value: 'runtime')
    arg (value: '--ios-bundleid')
    arg (value: "com.zotohlab.p.${appid}")
    arg (value: '-d')
    arg (value: "${basedir}/cocos")
    arg (value: "${appid}")
  }
}

target (deployapp: '') {
  input (message: "Enter app-name: ", addproperty: 'appid')
  final vendors= "${basedir}/public/vendors"
  final despath= "${basedir}/cocos/${appid}"
  final srcpath= "${webDir}/${appid}"
  final des= new File("${despath}")
  final src= new File("${srcpath}")
  final dd2 = new File(des, "res")
  final dd1 = new File(des, "src")
  final dd2path= dd2.getCanonicalPath()
  final dd1path= dd1.getCanonicalPath()

  if ( ! src.exists()) {
    println "Invalid game: ${appid}"
    return
  }
  if ( ! des.exists()) {
    cocos_new("${appid}")
  }

  println "Deploying game: ${appid}"
  dd2.deleteDir()
  dd1.deleteDir()
  dd2.mkdirs()
  dd1.mkdirs()
  // resources
  copy (todir: dd2path+'/main') {
    fileset (dir: "${webDir}/main/res")
  }
  copy (todir: dd2path+'/cocos2d') {
    fileset (dir: "${webDir}/cocos2d/res")
  }
  copy (todir: dd2path+"/${appid}") {
    fileset (dir: "${srcpath}/res")
  }
  // js code
  copy (todir: "${dd1path}/zotohlab") {
    fileset (dir: "${webDir}/cocos2d/src/zotohlab")
  }
  copy (todir: "${dd1path}/${appid}") {
    fileset (dir: "${srcpath}/src")
  }
  copy (todir: "${dd1path}/helpers") {
    fileset (dir: "${vendors}/helpers") {
      include (name: 'dbg.js')
    }
  }
  ['almond','js-signals','ash-js','ramda','cherimoia', 'l10njs', 'cookies','mustache'].each { d ->
    copy (todir: "${dd1path}/${d}") {
      fileset (dir: "${vendors}/${d}")
    }
  }
  // boot stuff
  copy (todir: "${despath}", overwrite: true) {
    fileset (dir: "${srcDir}/resources") {
      include (name: 'project.json')
      include (name: 'main.js')
      include (name: 'index.html')
    }
  }
  final j1= new JsonParser().parse(FileUtils.readFileToString(
    new File("${srcDir}/resources/project.json"),"utf-8"))
  final j2= new JsonParser().parse(FileUtils.readFileToString(
    new File("${srcpath}/src/project.json"),"utf-8"))
  j1.getAsJsonArray('jsList').addAll( j2.getAsJsonArray('jsList'))
  FileUtils.writeStringToFile(new File("${despath}/project.json"),
  new GsonBuilder().setPrettyPrinting().create().toJson(j1), "utf-8")
  doJiggleTheIndexFile(appid,"${basedir}/cocos/${appid}",true)

}

