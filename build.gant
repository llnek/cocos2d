def doCompileTypeScript(wappid) {
  copy (todir: "${buildDir}/web_scripts/${wappid}") {
    fileset (dir: "${webDir}/${wappid}/src") {
      include (name: '**/*.ts')
    }
  }
  exec (executable: 'tsc', dir: "${buildDir}/web_scripts/${wappid}") {
    arg (value: '--outDir')
    arg (value: '--output')
    arg (value: "${buildDir}/web_scripts/${wappid}")
    arg (value: '**/*.ts')
  }
}

