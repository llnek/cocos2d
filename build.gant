def doCompileJava() {
  javac (
         sourcepath: '',
         srcdir: "${srcDir}/java",
         destdir: "${outJarDir}",
         includeantruntime: 'false',
         excludes: '',
         target: '1.8',
         debug: "${buildDebug}",
         debuglevel: "lines,vars,source",
         classpathref: 'compile.path.id') {
    compilerarg (line: '-Xlint:deprecation -Xlint:unchecked')
    include (name: '**/*.java')
  }
}

