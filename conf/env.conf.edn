{

  :container {
    :threads 6
  }

  :databases {

    :cassandra {

    }

    :jdbc {

      :pg {
        :url "jdbc:postgresql://localhost:5432/test"
        :d "org.postgresql.Driver"
        :user "test"
        :passwd "secret"
        :poolsize "4:2"
        :status false
      }

      :default {
        :url "jdbc:h2:${appdir}/dbs/cocos2d"
        :d "org.h2.Driver"
        :user "sa"
        :passwd ""
        :debug true
        :poolsize "3:3"
      }
    }

  }

  :services {

    :netty-io {

      :service "czc.tardis.io/NettyMVC"
      :host ""
      :port 8000

      :1_comment_only "maxage is 1month, max idle is 1day"
      :sessionAgeSecs 2592000
      :maxIdleSecs 0
      :hidden false
      :domain ""
      :domainPath "/"

      :cacheMaxAgeSecs 3600
      :cacheAssets false
      :useETags false
      :errorHandler ""
      :handler "cmzlabclj.cocos2d.pipe.Handler"

      :wsock {
        :handler "cmzlabclj.odin.net.wsock.Handler"
        :uri "/network/odin/websocket"
      }
    }
  }

}

